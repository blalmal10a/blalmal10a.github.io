---
import Layout from "../layouts/Layout.astro"
---

<Layout title="@blalmal10a | Portfolio">
	<section class="relative" id="home">
		<div id="app">
			<div
				class="absolute inset-0 bg-black opacity-10 home-bg"
				style="border-top: 70px solid  black;"
			>
			</div>
			<div
				class="container mx-auto flex justify-center items-center"
				style="overflow-x: hidden; height: calc(100dvh - 200px)"
			>
			</div>
		</div>
	</section>
	<a
		href="#"
		onclick="topFunction()"
		id="back-to-top"
		class="back-to-top fixed hidden text-lg rounded-full z-10 bottom-5 end-5 h-9 w-9 text-center bg-orange-600 text-white leading-9"
		><i class="uil uil-arrow-up"></i></a
	>
	<div class="fixed top-1/4 -right-2 z-3">
		<span class="relative inline-block rotate-90">
			<input type="checkbox" class="checkbox opacity-0 absolute" id="chk" />
			<label
				class="label bg-slate-900 dark:bg-white shadow dark:shadow-gray-800 cursor-pointer rounded-full flex justify-between items-center p-1 w-14 h-8"
				for="chk"
			>
				<i class="uil uil-moon text-[20px] text-yellow-500"></i>
				<i class="uil uil-sun text-[20px] text-yellow-500"></i>
				<span
					class="ball bg-white dark:bg-slate-900 rounded-full absolute top-[2px] left-[2px] w-7 h-7"
				></span>
			</label>
		</span>
	</div>
</Layout>
