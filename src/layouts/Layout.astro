interface Props {
	title: string
}

const {title} = Astro.props
---

<!doctype html>
<html lang="en" class="light scroll-smooth" style="width: 100vw !important;">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="@blalmal10a - Portfolio ðŸ¤«." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Css -->

		<link rel="preload" href="/assets/preload.css" as="style" />
		<link rel="stylesheet" href="/assets/preload.css" />
		<link href="/assets/libs/tobii/css/tobii.min.css" rel="stylesheet" />
		<link href="/assets/libs/tiny-slider/tiny-slider.css" rel="stylesheet" />
		<!-- Main Css -->
		<link
			href="/assets/libs/@iconscout/unicons/css/line.css"
			type="text/css"
			rel="stylesheet"
		/>
		<link
			href="/assets/libs/@mdi/font/css/materialdesignicons.min.css"
			rel="stylesheet"
			type="text/css"
		/>

		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css"
			integrity="sha512-1cK78a1o+ht2JcaW6g8OXYwqpev9+6GqOkz9xmBN9iUUhIndKtxwILGWYOSibOKjLsEdjyjZvYDq/cZwNeak0w=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
		<link rel="stylesheet" href="/assets/css/star-rating.css" />
		<link rel="stylesheet" href="/assets/css/main.css" />
	</head>
	<body
		class="font-rubik text-base text-slate-900 dark:text-white dark:bg-slate-900"
	>
		<div class="loader-wrapper">
			<span class="loader"></span>
		</div>
		<NavBar />
		<slot />

		<FooterSection />
		<div
			style="height: 500vh; position: relative;"
			class="bg-slate-800 dark:bg-gray-900"
		>
			<div
				class="absolute bottom-0 text-center w-full pb-20"
				style="color: white;"
			>
				TINGE HELAI THLENG THLENG I LO SCROLL A <br /> I HARH LUTUK!
			</div>
		</div>

		<script
			is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"
			integrity="sha512-A7AYk1fGKX6S2SsHywmPkrnzTZHrgiVT7GcQkLGDe2ev0aWb8zejytzS8wjo7PGEXKqJOrjQ4oORtnimIRZBtw=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"></script>
		<script is:inline src="/assets/libs/gumshoejs/gumshoe.polyfills.min.js"
		></script>
		<script is:inline src="/assets/libs/tobii/js/tobii.min.js"></script>
		<script is:inline src="/assets/libs/tiny-slider/min/tiny-slider.js"
		></script>
		<script is:inline src="/assets/js/plugins.init.js"></script>
		<script is:inline src="/assets/js/app.js"></script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		/* background: #13151a;
		background-size: 224px; */
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
