---
import ContactSection from "./ContactSection.astro"
---

<footer class="py-8 bg-slate-800 dark:bg-gray-900" id="contact">
	<ContactSection />
	<div class="flex justify-center">
		<ul
			class="list-none foot-icon ltr:md:text-right rtl:md:text-left text-center"
		>
			<li class="inline">
				<a
					href="https://www.github.com/blalmal10a/"
					target="_blank"
					class="btn btn-icon btn-sm border rounded-md border-slate-700 dark:border-slate-800 hover:border-orange-600 bg-slate-800 dark:bg-gray-900 hover:bg-orange-600 dark:hover:bg-orange-600 text-gray-400 hover:text-white"
					><i class="uil uil-github align-middle" title="github"></i></a
				>
			</li>
			<li class="inline">
				<a
					href="https://www.facebook.com/blalmal10a/"
					target="_blank"
					class="btn btn-icon btn-sm border rounded-md border-slate-700 dark:border-slate-800 hover:border-orange-600 bg-slate-800 dark:bg-gray-900 hover:bg-orange-600 dark:hover:bg-orange-600 text-gray-400 hover:text-white"
					><i class="uil uil-facebook-f align-middle" title="facebook"></i></a
				>
			</li>
			<li class="inline">
				<a
					href="https://www.instagram.com/blalmal10a/"
					target="_blank"
					class="btn btn-icon btn-sm border rounded-md border-slate-700 dark:border-slate-800 hover:border-orange-600 bg-slate-800 dark:bg-gray-900 hover:bg-orange-600 dark:hover:bg-orange-600 text-gray-400 hover:text-white"
					><i class="uil uil-instagram align-middle" title="instagram"></i></a
				>
			</li>
			<li class="inline">
				<a
					href="https://twitter.com/blalmal10a"
					target="_blank"
					class="btn btn-icon btn-sm border rounded-md border-slate-700 dark:border-slate-800 hover:border-orange-600 bg-slate-800 dark:bg-gray-900 hover:bg-orange-600 dark:hover:bg-orange-600 text-gray-400 hover:text-white"
					><i class="uil uil-twitter align-middle" title="twitter"></i></a
				>
			</li>
			<li class="inline">
				<a
					href="mailto:sirukla.in@gmail.com"
					class="btn btn-icon btn-sm border rounded-md border-slate-700 dark:border-slate-800 hover:border-orange-600 bg-slate-800 dark:bg-gray-900 hover:bg-orange-600 dark:hover:bg-orange-600 text-gray-400 hover:text-white"
					><i class="uil uil-envelope align-middle" title="email"></i></a
				>
			</li>
			<li class="inline">
				<a
					href="https://www.linkedin.com/in/blalmalsawma/"
					target="_blank"
					class="btn btn-icon btn-sm border rounded-md border-slate-700 dark:border-slate-800 hover:border-orange-600 bg-slate-800 dark:bg-gray-900 hover:bg-orange-600 dark:hover:bg-orange-600 text-gray-400 hover:text-white"
					><i class="uil uil-linkedin align-middle" title="Linkedin"></i></a
				>
			</li>
		</ul>
	</div>
	<div class="" style="overflow-x: hidden;">
		<div class="flex justify-center" data-aos="zoom-in-down">
			<img
				style="max-width: 300px;"
				src="/assets/images/high-five.svg"
				alt=""
			/>
		</div>
	</div>

	<div
		class="p-2 md:p-5 flex justify-center"
		style="height: 500px; overflow:hidden"
	>
		<iframe
			id="map-iframe"
			src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d277.1533714317665!2d92.72316523830814!3d23.741081700057666!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x374debb85cfb099f%3A0xb99311021f7c7c83!2sB.%20Dawngzela%20Building!5e0!3m2!1sen!2sin!4v1704352851086!5m2!1sen!2sin"
			width="110%"
			height="820"
			style="border:0; margin-top: -119px"
			allowfullscreen=""
			loading="lazy"
			referrerpolicy="no-referrer-when-downgrade"></iframe>
	</div>
</footer>
